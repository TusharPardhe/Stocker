<p>
  
  <% @stock_quote = StockQuote::Stock.quote(@stock.ticker) %>
  <% if @stock_quote %>
  
    <div class="panel panel-default">
      <div class="panel-heading"><strong><h2><%= @stock_quote.name %> - <%= @stock_quote.symbol %></h2></strong></div>
        <div class="panel-body">
          
          <div class="col-md-4">
            <h1><strong>$<%= @stock_quote.l %></strong></h1>
